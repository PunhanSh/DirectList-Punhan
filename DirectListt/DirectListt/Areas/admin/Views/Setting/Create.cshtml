@model Setting
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Setting" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.LogoFile">Logo</label>
                    <input class="form-control" asp-for="@Model.LogoFile">
                    <span asp-validation-for="@Model.LogoFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactAddress">Contact Address</label>
                    <input class="form-control" asp-for="@Model.ContactAddress">
                    <span asp-validation-for="@Model.ContactAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactEmail">ContactEmail</label>
                    <input class="form-control" asp-for="@Model.ContactEmail">
                    <span asp-validation-for="@Model.ContactEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ContactPhone">ContactPhone</label>
                    <input class="form-control" asp-for="@Model.ContactPhone">
                    <span asp-validation-for="@Model.ContactPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address">Address</label>
                    <input class="form-control" asp-for="@Model.Address">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.AboutUs">AboutUs</label>
                    <input class="form-control" asp-for="@Model.AboutUs">
                    <span asp-validation-for="@Model.AboutUs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DreamTitle">DreamTitle</label>
                    <input class="form-control" asp-for="@Model.DreamTitle">
                    <span asp-validation-for="@Model.DreamTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DreamSubTitle">DreamSubTitle</label>
                    <input class="form-control" asp-for="@Model.DreamSubTitle">
                    <span asp-validation-for="@Model.DreamSubTitle" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="submit" class="btn btn-dark" asp-area="admin" asp-controller="Setting" asp-action="Index">Back to List</button>

            </form>
        </div>
    </div>
</div>

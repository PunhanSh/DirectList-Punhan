@model Banner
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Banner" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col">Page</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row"></th>
                        <td><img src="~/Uploads/@Model.Image" style="width: 100px" alt="Alternate Text" /></td>
                        <td>@Model.Title</td>
                        <td>@Model.SubTitle</td>
                        <td>@Model.Page</td>
                        <td>
                            <a class="btn btn-success mb-1" asp-area="admin" asp-controller="Banner" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Banner" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

